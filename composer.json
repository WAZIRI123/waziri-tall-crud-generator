{
    "name": "waziri123/waziri-tall-crud-generator",
    "description": "package for generating livewire 3 crud components",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "WAZIRITALLCRUDGENERATOR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "WAZIRITALLCRUDGENERATOR\\Tests\\": "tests"
        }
    },
    
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "authors": [
        {
            "name": "waziri123",
            "email": "waziriallyamiri123@gmail.com"
        }
    ],
    "require-dev": {
        "livewire/livewire": "^3.0",
        "orchestra/testbench": "^8.13",
        "phpunit/phpunit": "^10.4",
        "christophrumpel/missing-livewire-assertions": "^2.1"
    },
    "extra": {
        "laravel": {
            "providers": [
                "WAZIRITALLCRUDGENERATOR\\TallCrudGeneratorServiceProvider"
            ]
        }
    },
    "require": {
    "ascsoftw/livewire-toast": "^1.0"
    }
}
